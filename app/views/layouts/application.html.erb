<!DOCTYPE html>
<html>
  <head>
    <title>OurApartment</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">OurApartment</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
          <% if session[:user_id] %>
            <li><%= link_to 'Profile', user_path(current_user) %></li>
            <li><%= link_to 'Neighbors', users_path %></li>
            <li><%= link_to 'Discussions', topics_path %></li>
          <% end %>
          </ul>

          <% if current_user %>
            <ul class="nav navbar-nav navbar-right">
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Logout <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li>User: <%= current_user.name %></li>
                  <li></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to 'Logout', logout_path, method: :delete %></li>
                </ul>
              </li>
            </ul>

          <% else %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to 'Register', new_user_path %></li>
              <li><%= link_to 'Sign-in', login_path %></li>
            </ul>
          <% end %>

        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>


    <%= yield %>

  </body>
</html>

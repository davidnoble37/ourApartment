<div class='container'>
  <h1><%= @user.name %></h1>

  <div class="row">

    <div id='image_wrapper' class="col-md-4 col-md-offset-1">
      <%= image_tag("#{@user.photo_url}", size: "100x100", alt: "photo") %><br>
    </div>

    <div id='about_wrapper' class="col-md-5 col-md-offset-1">
      <h4>A Little about Me</h4>
      <span>Live With: </span><%= @user.roommates %> <br><br>
      <span>Hobbies: </span><%= @user.hobbies %> <br><br>
      <span>Favorite Local Businesses: </span><%= @user.fav_local %> <br><br>
      <span>Moved to Apartment: </span><%= @user.move_yr %> <br><br>
      <span>Originally From: </span><%= @user.orig_home %> <br><br>
    </div>

  </div>

  <br>

  <div class="row">
    <div id='contact_wrapper' class="col-md-4 col-md-offset-1">
      <h4>Contact Info</h4>
      <span>Email:  </span><%= @user.email %> <br>
      <span>Call:  </span><%= @user.phone %> <br>
      <span>Come over:  </span>Apt #<%= @user.apt_num %> <br>
    </div>
  </div>

  <br>
  <br>

  <div class="row">
    <div class="col-md-2 col-md-offset-3">
      <% if @user == current_user %>
        <div class="btn btn-white-lg btn-default active"><%= link_to "Edit Profile", edit_user_path %></div>
      <% end %>
    </div>

    <div class="col-md-2">
      <div class="btn btn-white btn-default active"><%= link_to "Back to Directory", users_path %></div>
    </div>

    <div class="col-md-2">
      <% if @user == current_user %>
        <div class="btn btn-white btn-default active"><%= link_to 'Delete Profile', @user, method: :delete, data: {confirm: "Are you sure you want to delete your profile?"}%></div>
      <% end %>
    </div>
  </div>

</div>
